<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>2.2.9.0</AssemblyVersion>
    <FileVersion>2.2.9.0</FileVersion>
    <Product>DirectShow Net Library</Product>
    <ProjectGuid>6D0386CE-37E6-4f77-B678-07C584105DC6</ProjectGuid>
    <Description>.NET Interfaces for calling DirectShow.  See http://directshownet.sourceforge.net/</Description>
    <Copyright>GNU Lesser General Public License v2.1</Copyright>
    <Product>$(Configuration)</Product>
    <ProductVersion>2.2</ProductVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.9</Version>
    <PackageProjectUrl>http://directshownet.sourceforge.net/</PackageProjectUrl>
    <PackageLicenseExpression>LGPL-2.1-only</PackageLicenseExpression>
    <DefineConstants>TRACE;ALLOW_UNTESTED_INTERFACES</DefineConstants>
    <AssemblyName>DirectShow4Net</AssemblyName>
    <RootNamespace>DirectShow4Net</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\..\outputs\standard</OutputPath>
    <DocumentationFile>..\..\..\outputs\standard\DirectShow4Net.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\..\releases\standard</OutputPath>
    <DocumentationFile>..\..\..\releases\standard\DirectShow4Net.xml</DocumentationFile>
  </PropertyGroup>

</Project>
